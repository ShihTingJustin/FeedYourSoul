<!-- ./views/index.handlebars -->
<!-- search bar -->
<div class="container">
  <div class="search-bar d-flex">
    <div class="input-group">
      <form action="/search" method="GET" class="search-area d-flex align-items-center">
        <i class="fas fa-search"></i>
        <input type="text" name="keyword" class="form-control search-input" placeholder="尋找你愛的餐廳名稱或種類"
          aria-label="Restaurant Name..." aria-describedby="search-button" value="{{ keyword }}" onfocus="onFocus()"
          onfocusout="onFocusOut()">
      </form>
    </div>

    {{!-- <div class="form-group">
      <select onchange="location = this.value;" name="category" id="inputState" class="form-control">
        <option selected></option>
        <option value="/sort/rating/desc">家居物業</option>
        <option>交通出行</option>
        <option>休閒娛樂</option>
        <option>餐飲食品</option>
        <option>其他</option>
      </select>
    </div> --}}

    <div class="dropdown">
      <div class="btn-group">
        <button type="button" class="btn btn-danger dropdown-toggle dropdown-btn" data-toggle="dropdown"
          aria-haspopup="true" aria-expanded="true">
          排列方式
        </button>
        <div class="dropdown-menu">
          <a class="dropdown-item" href="/sort/name/asc">餐廳名稱 (A ~ Z)</a>
          <a class="dropdown-item" href="/sort/name/desc">餐廳名稱 (Z ~ A)</a>
          <a class="dropdown-item" href="/sort/rating/desc">顧客評價 (高 ~ 低)</a>
          <a class="dropdown-item" href="/sort/rating/asc">顧客評價 (低 ~ 高)</a>
        </div>
      </div>
    </div>
  </div>


  <!-- restaurant list -->
  <div class="row my-5">
    {{#each restaurants}}
    <div class="col-sm-6 col-md-4 col-lg-3 mb-3">
      <a href="/restaurants/{{ this._id }}" class="text-secondary">
        <div class="card mb-3 h-100">
          <div class="card-photo">
            <i class="far fa-heart text-right"></i>
            <img class="card-img-top" src="{{ this.image }}" alt="">
          </div>
          <div class="card-body">
            <h6 class="card-title text-center">{{ this.name }}</h6>
            <div class="restaurant-info">
              <div class="d-flex w-100 justify-content-center mt-4">
                <span class="badge badge-pill badge-danger font-weight-normal mr-2">{{ this.rating }}<i
                    class="fas fa-star fa-xs ml-1"></i>
                </span>
                <span class="badge badge-pill badge-secondary font-weight-normal">{{ this.category }}
                </span>
              </div>
            </div>
            <div class="d-flex justify-content-center mt-2" style="margin-bottom: -1.5rem;" id="card-editor">
              <a href="/restaurants/{{ this._id }}">
                <i class="fas fa-info-circle"></i>
              </a>
              <a href="/restaurants/{{ this._id }}/edit">
                <i class="fas fa-pencil-alt ml-4 mr-3"></i>
              </a>
              <form action="./restaurants/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;"
                id='delete-form' onsubmit="return deleteCheckAgain()">
                <button type="submit" style="border: none; background: transparent;" class="fas fa-times-circle">
                </button>
              </form>
            </div>
          </div>
        </div>
      </a>
    </div>
    {{/each}}
  </div>
</div>