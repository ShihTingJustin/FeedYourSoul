<!-- ./views/index.handlebars -->
<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="尋找你愛的餐廳" aria-label="Restaurant Name..."
            aria-describedby="search-button" value={{ keyword }}>
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container">
  <div class="row content-block">
    <div class="col-md-10 col-12 mx-auto" id="card-block-top">
      <div class="card-columns">
        {{#each restaurants}}
        <a href="/restaurants/{{ this._id }}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{ this.image }}" alt="">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{ this.name }}</h6>
              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{ this.category }}
              </div>
              <div class="d-flex flex-wrap align-items-center mt-2">
                <div class="d-flex">
                  <span class="badge badge-pill badge-danger font-weight-normal">{{ this.rating }}<i
                      class="fas fa-star fa-xs ml-1"></i>
                  </span>
                </div>
                <div class="ml-auto" id="card-editor">
                  <a href="/restaurants/{{ this._id }}">
                    <i class="fas fa-info-circle mr-1"></i>
                  </a>
                  <a href="/restaurants/{{ this._id }}/edit">
                    <i class="fas fa-pencil-alt mx-2"></i>
                  </a>
                  <form action="./restaurants/{{ this._id }}/delete" method="POST" style="display: inline;">
                    <button type="submit" style="border: none; margin: 0 -0.3rem; background: transparent;"
                      class="fas fa-times-circle">
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>